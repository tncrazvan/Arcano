{
    "minify": 1,
	"port":443,
    "webRoot": "../webapp",
    "charset":"UTF-8",
    "bindAddress": "::",
    "controllers": {
        "http": "com.github.tncrazvan.catpaw.Controller.Http",
        "ws": "com.github.tncrazvan.catpaw.Controller.WebSocket"
    },
    "compress": ["deflate"],
    "header": {
        "Cache-Control": "no-store"
    }
	
    "groups":{
        "allow":true
    },
    "smtp":{
        "allow":true,
        "hostname":"yourDomainName.com"
    },
    "certificate":{
        "name":"tls_certificate.jks",
        "type":"JKS",
        "password":"your password"
    }
}